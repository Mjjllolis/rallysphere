{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"jsx": "react-jsx",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"],
			"@lib/*": ["lib/*"]
		},
		"types": ["expo", "react", "react-native"],
		"skipLibCheck": true
	},
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
